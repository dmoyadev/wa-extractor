{
	"compilerOptions": {
		"target": "esnext",
		"module": "es2022",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"types": [
			"vite/client",
			"node",
			"jest"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"ESNext",
			"DOM"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
	],
	"exclude": [
		"node_modules"
	]
}
